<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fa fa-sign-in"></i>  Login</h1>
        <% include ./partials/messages %>
        <form action="/auth/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/auth/register">Register</a>
        </p>
        <p class="lead mt-4">
          Back <a href="/auth/login"><i class="fa fa-arrow-left fa-lg" aria-hidden="true"></i></a>
        </p>
        <p class="lead mt-4"><a href="/">Home <i class="fa fa-home fa-lg" aria-hidden="true"></i></a></p>
      </div>
    </div>
  </div>
  
  